{
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "parser": "html",
                "printWidth": 9999,
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}